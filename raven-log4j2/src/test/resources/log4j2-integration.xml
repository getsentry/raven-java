<?xml version="1.0" encoding="UTF-8"?>
<configuration packages="org.apache.logging.log4j.core,com.getsentry.raven.log4j2">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[RAVEN] [%-5p] %c - %m%n%throwable{none}"/>
        </Console>
        <Raven name="Sentry">
            <dsn>http://8292bf61d620417282e68a72ae03154a:e3908e05ad874b24b7a168992bfa3577@localhost:8080/1?raven.async=false</dsn>
        </Raven>
    </appenders>

    <loggers>
        <!-- Wiremock can throw WARN logs on shutdown which would trigger Raven to send more events -->
        <logger name="wiremock.org.eclipse.jetty.util.thread.QueuedThreadPool" level="OFF" additivity="false" />

        <root level="all">
            <appender-ref ref="Console" />
            <!-- Set Raven to WARNING level, as we recommend this as the lowest users go in their own configuration -->
            <appender-ref ref="Sentry" level="WARN" />
        </root>
    </loggers>
</configuration>
